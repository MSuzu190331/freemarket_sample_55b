.index-header
  .header
    .header-inner
      .header-top
        %h1
          = link_to "https://www.mercari.com/jp/" do
            %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3236810361"}
        %form.header-form
          %input.input-default{type: "search", name: "keyword", placeholder: "なにかお探しですか？"}
          %i.fas.fa-search
      .header-navigation-box.clearfix
        %nav.left-content
          %ul.header-navigation
            %li
              %h2
                = link_to "https://www.mercari.com/jp/category/", {class: "header-navigation-list-parent"} do
                  %i.fas.fa-search