.defalt-container
  = render 'users/indexheader'
  %nav.category-bar
    %ul
      %li
        メルカリ  ＞
        %span
          レディース
  %section.item-box-container
    .item-box-container__single-sontainer
      %h1.item-name
        = @product.name
      %p.item-word
        = @user.name  + "さんから出品されました。レディースの商品で、未定から2~3日で発送されます。"
      .item-main-content
        .item-photo
          = image_tag @image.image.url, class:"product-img"
        %table.item-detail-table
          %tbody
            %tr
              %th
                出品者
              %td
                = @user.name
                .evaluation
                  .item-user-ratings
                    %i.fas.fa-laugh
                    %span
                      500
                  .item-user-ratings
                    %i.fas.fa-meh
                    %span
                      100
                  .item-user-ratings
                    %i.fas.fa-frown
                    %span
                      3
            %tr
              %th
                カテゴリー
              %td
                %i.fas.fa-chevron-right
                = link_to"レディース",root_path
            %tr
              %th
                ブランド
              %td
                = link_to"ワンピース",root_path
            %tr
              %th
                商品のサイズ
              %td
                Free size
            %tr
              %th
                商品の状態
              %td
                = @product.condition
            %tr
              %th
                配送料の負担
              %td
                送料込み（出品者負担）
            %tr
              %th
                配送の方法
              %td
                普通郵便(定形、定形外)
            %tr
              %th
                配送元地域
              %td
                = @product.delivery
            %tr
              %th
                発送日の目安
              %td
                ２〜３日で発送          
      .item-price-box
        %span.item-price__bold
          ¥
          = @product.price
        %span.item-tax
          （税込）
        %span.item-shipping-fee
          送料込み
      = link_to "/products/buy/#{@product.id}",product_id:@product.id, class:"item-buy-btn" do
        購入を確定する
      .item-description
        %p.item-description__inner
          = @product.description
      .item-button-container
        .item-button-left
          = link_to root_path, class:"item-button-like" do
            %i.far.fa-heart
            %span
            = @product.status
          = link_to root_path, class:"item-button-report" do
            %i.far.fa-flag
            %span
            不適切な商品の報告
        .item-button-right
          = link_to root_path do
            %i.fas.fa-unlock-alt
            %span
            あんしん・あんぜんへの取り組み
  .item-detail-message
  %ul.nav-item-link-prev-next
    %li.nav-item-link-prev
      = link_to root_path do
        %i.fas.fa-chevron-left
        保護フィルム
    %li.nav-item-link-next
      = link_to root_path do
        パジャマ
        %i.fas.fa-chevron-right
  .item-social-media-box
    %ul.social-media-box
      %li.facebook-btn
        = link_to root_path do
          %i.fab.fa-facebook-square
      %li.twitter-btn
        = link_to root_path do
          %i.fab.fa-twitter-square
      %li.pinterest-btn
        = link_to root_path do
          %i.fab.fa-pinterest-square
  .items-in-user-profile
    %section.items-box-container.items-in-user-profile 
    
      %h2.items-box-head
        = @user.name  + "さんのその他の出品"
      .items-box-content__clearfix
        %section.items-box
          = link_to root_path do
            %figure.items-box-photo
              = image_tag "http://c.imgz.jp/760/30368760/30368760_16_D_500.jpg", class:"other_img"
            .items-box-body
              %h3.items-box-name
                大人気 liflattie ships:リネンタックパンツ
              .items-box-num
                .items-box-price
                  ¥3000
                .like
                  %i.far.fa-heart
                  5

      %h2.items-box-head
        = link_to root_path do
          レディースカジュアルパンツ その他の商品
      .items-box-content__clearfix
        %section.items-box
          = link_to root_path do
            %figure.items-box-photo
              = image_tag "http://c.imgz.jp/760/30368760/30368760_16_D_500.jpg", class:"other_img"
            .items-box-body
              %h3.items-box-name
                大人気 liflattie ships:リネンタックパンツ
              .items-box-num
                .items-box-price
                  ¥3000
                .like
                  %i.far.fa-heart
                  5
= render 'index-footer'