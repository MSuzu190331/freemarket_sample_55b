.defalt-container
  = render 'index-header-list'
  %nav.category-bar
    %ul
      %li
        メルカリ　＞
        %span
          レディース
  %section.item-box-container
    .item-box-container__single-sontainer
      %h1.item-name
        ワンピース
      %p.item-word
        testさんから出品されました。レディースの商品で、未定から2~3日で発送されます。
      .item-main-content
        .item-photo
          =image_tag('dog.jpg',class:"product-img")
        %table.item-detail-table
          %tbody
            %tr
              %th
                出品者
              %td
                = link_to"test",root_path
                .evaluation
                  .item-user-ratings
                    %i.far.fa-smile
                    %span
                      500
                  .item-user-ratings
                    %i.far.fa-meh
                    %span
                      100
                  .item-user-ratings
                    %i.far.fa-frown
                    %span
                      3
            %tr
              %th
                カテゴリー
              %td
                %i.fas.fa-chevron-right
                = link_to"レディース",root_path
            %tr
              %th
                ブランド
              %td
                = link_to"ワンピース",root_path
            %tr
              %th
                商品のサイズ
              %td
                Free size
            %tr
              %th
                商品の状態
              %td
                目立った傷や汚れなし
            %tr
              %th
                配送料の負担
              %td
                送料込み（出品者負担）
            %tr
              %th
                配送の方法
              %td
                普通郵便(定形、定形外)
            %tr
              %th
                配送元地域
              %td
                = link_to "大阪", root_path
            %tr
              %th
                発送日の目安
              %td
                ２〜３日で発送

                
      .item-price-box
        %span.item-price__bold
          ¥3,500
        %span.item-tax
          （税込）
        %span.item-shipping-fee
          送料込み
      = link_to'購入画面に進む', root_path ,class:"item-buy-btn"
      .item-description
        %p.item-description__inner
          新品タグ付きです。
          ご不明点あればコメントしてください。
      .item-button-container
        .item-button-left
          = link_to root_path, class:"item-button-like" do
            %i.far.fa-heart
            %span
            いいね！1
          = link_to root_path, class:"item-button-report" do
            %i.far.fa-flag
            %span
            不適切な商品の報告
        .item-button-right
          = link_to root_path do
            %i.fas.fa-unlock-alt
            %span
            あんしん・あんぜんへの取り組み
  .item-detail-message
  %ul.nav-item-link-prev-next
    %li.nav-item-link-prev
      = link_to root_path do
        %i.fas.fa-chevron-left
        保護フィルム
    %li.nav-item-link-next
      = link_to root_path do
        パジャマ
        %i.fas.fa-chevron-right
  .item-social-media-box
    %ul.social-media-box
      %li.facebook-btn
        = link_to root_path do
          %i.fab.fa-facebook-square
      %li.twitter-btn
        = link_to root_path do
          %i.fab.fa-twitter-square
      %li.pinterest-btn
        = link_to root_path do
          %i.fab.fa-pinterest-square
  .items-in-user-profile
= render 'index-footer'