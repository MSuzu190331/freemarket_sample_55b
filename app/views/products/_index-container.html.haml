%section.pickup-container
  %h2.pickup-head
    ピックアップカテゴリー
  %section.items-box-container
    %h3.text-center
      = link_to"レディース新着アイテム",root_path 
    .items-box-content
      - @products.first(4).each do |product|
        %section.items-box
          =link_to product_path(product.id), class: "items__box__btn" do
            %figure.items-box-photo
              = image_tag product.image.image.url, class:"img"
            .items-box-body
              %h3.items-box-name
                = product.name
              .items-box-num
                .items-box-price
                  ￥
                  = product.price
                .like
                  %i.far.fa-heart
                  = product.status
    .view-all
      = link_to"すべての商品を見る",root_path

