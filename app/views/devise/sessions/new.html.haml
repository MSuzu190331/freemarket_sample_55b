.container
  .container__header
    %h1
      = link_to "https://www.mercari.com/jp/" do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2098311808"
  .container__main
    .container__main--login-panel
      .container__main--login-panel--create-account
        %p アカウントをお持ちでない方はこちら
        = link_to "https://www.mercari.com/jp/signup/?after_save_callback=https%3A%2F%2Fwww.mercari.com%2Fjp%2F" do
          新規会員登録
      .container__main--login-panel--sns-login
        %button#facebook.btn-def.btn-sns
          %i.fab.fa-facebook-square 
          = link_to '/users/auth/facebook', method: :post do
            Facebookでログイン
        %button#google.btn-def.btn-sns  
          = link_to '/users/auth/google_oauth2', method: :post do
            Googleでログイン
      =form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| 
        .container__main--login-panel--form
          .container__main--login-panel--form--input-email
            =f.email_field :email, placeholder: "メールアドレス", class: "input-box__text input-def"
          .container__main--login-panel--form--input-pass
            =f.password_field :password, placeholder: "パスワード", class: "input-box__text input-def"
          .container__main--login-panel--form--input-box
            = recaptcha_tags
          %button.submit-btn.btn-def ログイン
          %input{type: "hidden", value: "https://www.mercari.com/jp/"}
          %a{href: "https://www.mercari.com/jp/password/reset/start/"}パスワードをお忘れの方
  .container__footer
    %nav
      %ul.clearfix
        %li
          %a{href: "https://www.mercari.com/jp/privacy/"}プライバシーポリシー
        %li
          %a{href: "https://www.mercari.com/jp/tos/"}メルカリ利用規約
        %li
          %a{href: "https://www.mercari.com/jp/tokutei/"}特定商取引に関する表記
    %a.footer-logo{href: "https://www.mercari.com/jp/"}
      %img{alt: "mercari", height: "65", src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2098311808", :width => "80"}/
    %p
      %small © 2019 Mercari
