.index-container
  .index-header
    .index-header-inner
      .index-header-top
        %h1
          = link_to root_path do
            = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3135490372"
        = form_tag(search_products_path, method: 'get', class:"index-header-form") do
          = text_field_tag "search", "", placeholder: "何かお探しですか？", class:"index-input-default"
          = label :search, class: "search-label", for: "message_image" do
            %i.index-search-icon.fas.fa-search
            = submit_tag ' ', class:"index-header-form-submit-btn"
      .index-header-navigation-box.clearfix
        %nav.index-left-content
          %ul.header-navigation
            %li
              %h2
                = link_to "https://www.mercari.com/jp/category/", {class: "header-navigation-list-parent"} do
                  %i.fas.fa-bars
                  %span カテゴリーから探す
            %li
              %h2
                = link_to "https://www.mercari.com/jp/brand/", {class: "header-navigation-list-parent"} do
                  %i.fas.fa-tags
                  %span ブランドから探す
        .index-right-content
          %ul.user-nav
            %li.user-nav__like
              =link_to "#", class:"user-nav__like--link" do
                %i.far.fa-heart
                %span
                  いいね!一覧
            %li.user-nav__bell
              =link_to "#", class:"user-nav__bell--link" do
                %i.far.fa-bell
                %span
                  お知らせ
            %li.user-nav__task
              =link_to "#", class:"user-nav__task--link" do
                %i.fas.fa-check
                %span
                  やることリスト
            %li.user-nav__mypage
              =link_to user_path(current_user.id), {class:"user-nav__mypage--link"} do
                .user-nav__mypage--link--image
                  = image_tag "http://static.mercdn.net/images/member_photo_noimage_thumb.png", width:"32", class:"face"
                %span
                  マイページ
